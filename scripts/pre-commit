#!/bin/sh
#
# Pre-commit hook that runs cargo fmt and cargo clippy
# to ensure code quality before committing

set -e

echo "Running pre-commit checks..."

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo "Error: cargo not found. Please install Rust."
    exit 1
fi

# Run cargo fmt check
echo "1. Checking code formatting with cargo fmt..."
if ! cargo fmt --all -- --check; then
    echo ""
    echo "Error: Code is not properly formatted."
    echo "Please run 'cargo fmt --all' to format your code."
    exit 1
fi
echo "✓ Formatting check passed"

# Run cargo clippy
echo ""
echo "2. Running clippy checks..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo ""
    echo "Error: Clippy found issues in the code."
    echo "Please fix the warnings and errors reported above."
    exit 1
fi
echo "✓ Clippy check passed"

# Run tests
echo ""
echo "3. Running tests..."
if ! cargo test --quiet; then
    echo ""
    echo "Error: Tests failed."
    echo "Please fix the failing tests before committing."
    exit 1
fi
echo "✓ All tests passed"

echo ""
echo "All pre-commit checks passed! ✓"
